{
  "extends": "@bluelovers/tsconfig/esm/module.json",
  "compilerOptions": {
    "importHelpers": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "noEmit": true,
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
